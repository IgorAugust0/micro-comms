{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "ES2022",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
  },
  // https://github.com/nodejs/node/issues/48207#issuecomment-1880644283
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true,
  },
  "include": [
    "src/**/*.ts",
    "src/lib/placeholder-data.ts",
    "src/modules/model/user-model.ts",
    "src/config/db/db-config.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}